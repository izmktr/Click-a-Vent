{
  "manifest_version": 3,
  "name": "Click-a-Vent",
  "version": "1.0.0",
  "description": "ページの情報をクリックして選択し、Google Calendarにイベントを登録する拡張機能",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
